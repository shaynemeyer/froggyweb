extends layout

block content

    .container
        -if(user)
            h1=user.email
        .col-md-5
            form.form-signin(action="/account/login", method="post")
                h2.form-signin-heading Please sign in
                    input.form-control(type='text', name='username' placeholder='Email address', autofocus='autofocus')
                    input.form-control(type='password', name='password' placeholder='Password')
                    label.checkbox
                       input(type='checkbox', value='remember-me')
                       | Remember me
                    button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
        .col-md-5
            form.form-signin(action="/account/register", method="post")
                h2.form-signin-heading Register
                    input.form-control(type='text', name='username' placeholder='Email address', autofocus='autofocus')
                    input.form-control(type='password', name='password' placeholder='Password')
                    input.form-control(type='confirm', placeholder='Confirm')

                    button.btn.btn-lg.btn-primary.btn-block(type='submit') Register

